<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_tip_logo"
        android:visibility="gone"
        android:src="@drawable/no_content_tip"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <ProgressBar
        android:id="@+id/progress"
        android:indeterminateDrawable="@drawable/loading_dialog_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_tips"
        android:padding="15dp"
        android:text="加载中..."
        android:textColor="?attr/dayNightOneTextColor"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_operate"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_gray"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:textColor="?attr/dayNightOneTextColor"
        android:visibility="gone"
        tools:text="@string/reload"
        android:layout_width="wrap_content"
        android:layout_height="35dp"/>


</LinearLayout>